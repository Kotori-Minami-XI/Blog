<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>

    <package name="struts" extends="struts-default">
        <!-- Handover to spring -->
        <action name="loginAction_*" class="loginAction" method="{1}">
            <result name="LOGIN_FAIL">/mgr_login.jsp</result>
            <result name="LOGIN_SUCCESS" type="redirect">/mgr_index.jsp</result>
            <result name="LOGOUT_SUCCESS" type="redirect">/mgr_login.jsp</result>
            <allowed-methods>login, logout</allowed-methods>
        </action>

        <action name="categoryAction_*" class="categoryAction" method="{1}">
            <result name="CATEGORY_ALL_OBTAIN_SUCCESS">/mgr_category.jsp</result>
            <allowed-methods>addCategory, listCategory, updateUI</allowed-methods>
        </action>
    </package>

</struts>